# Create a VM from a template
  - name: create the VM
    vmware_guest:
      hostname: ******
      username: blabla@bla.ru 
      password: 
      validate_certs: no
      esxi_hostname: esxi-ibm2.****
      datacenter: ***
      folder: ENV_DEV
      name: ans-test-dev
      state: poweredoff
      guest_id: centos64Guest
      disk:
      - size_gb: 10
        type: thin
        datastore: DS-ibm-raid5
      hardware:
        memory_mb: 1024
        num_cpus: 2
        scsi: paravirtual
      networks:
      - name: DMZ_232_Test_Dev
        ip: 172.17.232.85
        netmask: 255.255.255.0
        template: template-centOS7
      wait_for_ip_address: yes
    delegate_to: localhost
    register: deploy
